alignment bottom_middle
# background yes 
background no
#was no ^
#border_width 1
border_width 3
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
#draw_borders no
border_inner_margin 3
border_outer_margin 2
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Hack :bold:size=12
gap_x 0
gap_y 5
net_avg_samples 2
#no_buffers yes
double_buffer yes
out_to_console no
extra_newline no
own_window yes
own_window_type normal
own_window_transparent no
#own_window_colour FFBF00
#own_window_colour 3A73A5
own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
minimum_size 220 5
#maximum_width 1920
#own_window_class Conky
#own_window_type desktop
update_interval 0.05
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
#color1 FFBF00
color1 003377
color2 225599
color3 4477BB
color4 6699DD
color5 88BBFF
color6 FFFFFF
# Unused text
# ${color1}[swap ${swap}]${color} \
# ${color1}[up: ${uptime}]${color} \
# ${color1}[charge: ${apm_battery_life}]${color} \
# ${color4}[${fs_free /home} free]${color} \
# ${color1}    [ OpenBSD ${kernel} ] ${color} \

# ${color1}[ ${addr re0} ] RX ${downspeedgraph re0 7,45} TX ${upspeedgraph re0 7,45} \
# ${color2} ${execp sysctl | grep 'km0.temp0' | awk -F '=' '{ print $2 }' | awk '{ print $1 }' } \
TEXT
${color1}[${addr iwm0}] RX${downspeedgraph iwm0 7,45} TX${upspeedgraph iwm0 7,45} \
${color2}[CPU]${cpubar cpu0 7,45}${cpubar cpu1 7,45}${cpubar cpu2 7,45}${cpubar cpu3 7,45} \
${color3}[RAM]${membar 7,90} \
${color4}[BAT]${apm_battery_time}(${apm_battery_life}) \
${color5}[${time %D %H:%M:%S}]${font} \
